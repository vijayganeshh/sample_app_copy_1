<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="poll_form">
      <%= render 'shared/poll_form' %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.polls.any? %>
      <h3>Polls (<span id="poll_count"> <%= @user.polls.count %> </span>)</h3>
      <ol class="polls">
        <%= render @polls %>
      </ol>
      <%= will_paginate @polls %>
    <% end %>
  </div>
</div>